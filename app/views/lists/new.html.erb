<div class="container">
  <h1 class="d-flex justify-content-center" style="padding-top: 20px">New list</h1>
  <div class="row justify-content-center">
    <div class="col-4 mb-5 mt-5">
      <h4>Add a list:</h4>
      <%= simple_form_for(@list) do |f| %>
        <%= f.input :name, placeholder: "Your list name here ..."%>
        <%= f.submit "Add", class: "btn btn-secondary"%>
        <% end %>
    </div>
  </div>
</div>

<div class="d-flex justify-start" style="padding-left: 50px">
<%= link_to lists_path do %>
  <span type="button" class="btn btn-outline-secondary">Back to lists</span>
<% end %>

</div>
